{
  "rules": {
    "users": {
      "$uid": {
        // Solo permitir acceso a usuarios autenticados y solo a sus propios datos
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        // Validaci√≥n de datos
        ".validate": "newData.hasChildren(['userId', 'completedDays', 'streak', 'lastCompleted', 'streaksByLanguage'])",
        "userId": {
          ".validate": "newData.val() === auth.uid"
        },
        "completedDays": {
          ".validate": "newData.isArray()"
        },
        "streak": {
          ".validate": "newData.isNumber()"
        },
        "lastCompleted": {
          ".validate": "newData.val() === null || newData.isString()"
        },
        "streaksByLanguage": {
          "$language": {
            ".validate": "newData.hasChildren(['current', 'lastCompleted'])",
            "current": {
              ".validate": "newData.isNumber()"
            },
            "lastCompleted": {
              ".validate": "newData.val() === null || newData.isString()"
            }
          }
        }
      }
    }
  }
}